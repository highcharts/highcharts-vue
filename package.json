{
  "name": "highcharts-vue",
  "version": "1.2.0",
  "description": "Highcharts wrapper Vue component",
  "main": "dist/module/highcharts-vue.min.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:script-tag": "webpack --config config/webpack-script-tag.config.js",
    "build:module": "webpack --config config/webpack-module.config.js",
    "build": "npm run build:script-tag && npm run build:module",
    "build:app": "cd demo && npm install",
    "app": "cd demo && npm run dev",
    "lint": "eslint . --ext .js,.vue",
    "lint:fix": "eslint . --ext .js,.vue --fix",
    "release": "standard-version"
  },
  "homepage": "https://github.com/highcharts/highcharts-vue#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/highcharts/highcharts-vue"
  },
  "bugs": {
    "url": "https://github.com/highcharts/highcharts-vue/issues"
  },
  "keywords": [
    "highcharts",
    "wrapper",
    "vue",
    "component"
  ],
  "author": "Daniel Studencki <daniel.studencki@gmail.com>",
  "license": "SEE LICENSE IN LICENSE",
  "peerDependencies": {
    "highcharts": ">=5.0.0",
    "vue": ">=1.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run build"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.39",
    "@babel/preset-env": "^7.0.0-beta.39",
    "babel-loader": "^8.0.0-beta.0",
    "eslint": "^4.17.0",
    "eslint-plugin-standard": "^3.0.1",
    "eslint-plugin-vue": "^4.2.2",
    "husky": "^1.0.0-rc.13",
    "standard": "^10.0.3",
    "standard-version": "^4.4.0",
    "webpack": "^3.10.0"
  }
}
